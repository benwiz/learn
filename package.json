{
  "name": "@benwiz/boba.wasm",
  "version": "1.0.0",
  "description": "WASM based animated background as an NPM module written in C with no dependencies.",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc && webpack",
    "test": "jest",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/*"
      ],
      "extensions": "ts",
      "quiet": false
    }
  },
  "files": [
    "lib",
    "dist"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benwiz/boba.js.git"
  },
  "keywords": [
    "animation",
    "background"
  ],
  "author": "Ben Wisialowski <bwisialowski@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benwiz/boba.js/issues"
  },
  "homepage": "https://github.com/benwiz/boba.js#readme",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "jest": "^23.6.0",
    "npm-watch": "^0.5.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-airbnb-base": "^0.2.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2"
  }
}
